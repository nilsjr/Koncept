{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "baseBranches": [
    "develop"
  ],
  "schedule": [
    "before 5am every saturday"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": [
        "^org.jetbrains.kotlin",
        "^com.google.devtools.ksp"
      ],
      "groupName": "kotlin"
    },
    {
      "description": "Automerge non-major updates",
      "matchUpdateTypes": [
        "patch",
        "minor"
      ],
      "automerge": true
    }
  ]
}
